{erl_opts, [debug_info]}.
{deps, [
    {klsn, {git, "https://github.com/ts-klassen/klsn.git", {tag, "1.0.0"}}}
  , {pqueue, {git, "https://github.com/okeuday/pqueue.git", {tag, "v2.0.7"}}}
  , {jwk, {git, "https://github.com/ts-klassen/jwk.git", {tag, "0.1.4"}}}
  , {cowboy, {git, "https://github.com/ninenines/cowboy.git",{tag,"2.10.0"}}}
  , {ghwhk, {git_subdir, "https://github.com/ts-klassen/ghwhk.git", {tag, "0.1.0"}, "apps/ghwhk"}}
  , {gpte, {git_subdir, "https://github.com/ts-klassen/gpte.git", {tag, "0.1.0"}, "apps/gpte"}}
  , {jobpq, {git_subdir, "https://github.com/ts-klassen/jobpq.git", {tag, "0.1.0"}, "apps/jobpq"}}
]}.

{relx, [{release, {issue_chat_example, "0.1.0"},
         [issue_chat_example,
          sasl]},

        {mode, dev},

        %% automatically picked up if the files
        %% exist but can be set manually, which
        %% is required if the names aren't exactly
        %% sys.config and vm.args
        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"}

        %% the .src form of the configuration files do
        %% not require setting RELX_REPLACE_OS_VARS
        %% {sys_config_src, "./config/sys.config.src"},
        %% {vm_args_src, "./config/vm.args.src"}
]}.

{profiles, [{prod, [{relx,
                     [%% prod is the default mode when prod
                      %% profile is used, so does not have
                      %% to be explicitly included like this
                      {mode, prod}

                      %% use minimal mode to exclude ERTS
                      %% {mode, minimal}
                     ]
            }]}]}.
